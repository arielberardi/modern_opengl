{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build release version",
            "command": "/usr/bin/clang++",
            "args": [
                "--std=c++17",
                "--stdlib=libc++",

                "-Wno-deprecated",
                "-Wno-int-to-void-pointer-cast",

                "-L${workspaceFolder}/../Dependencies/GLFW/lib",
                "-L${workspaceFolder}/../Dependencies/GLEW/lib",

                "-I${workspaceFolder}/../Dependencies/GLFW/include",
                "-I${workspaceFolder}/../Dependencies/GLEW/include",
                "-I${workspaceFolder}/source",

                "-lglfw.3",
                "-lGLEW.2.2.0",

                "${workspaceFolder}/source/*.cpp",

                "-o",
                "${workspaceFolder}/build/release/${workspaceFolderBasename}",

                "-framework",
                "OpenGL"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Build debug version",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",

                "--std=c++17",
                "--stdlib=libc++",

                "-Wno-deprecated",
                "-Wno-int-to-void-pointer-cast",

                "-L${workspaceFolder}/../Dependencies/GLFW/lib",
                "-L${workspaceFolder}/../Dependencies/GLEW/lib",

                "-I${workspaceFolder}/../Dependencies/GLFW/include",
                "-I${workspaceFolder}/../Dependencies/GLEW/include",
                "-I${workspaceFolder}/source",

                "-lglfw.3",
                "-lGLEW.2.2.0",

                "-DDEBUG",

                "${workspaceFolder}/source/*.cpp",

                "-o",
                "${workspaceFolder}/build/debug/${workspaceFolderBasename}",

                "-framework",
                "OpenGL"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}
